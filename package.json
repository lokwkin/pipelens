{
  "name": "pipelens-monorepo",
  "version": "1.13.0",
  "description": "Monorepo for pipelens library and dashboard",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:lib": "cd packages/lib-ts && npm run build",
    "build:dashboard": "cd packages/dashboard && npm run build",
    "build": "npm run build:lib && npm run build:dashboard",
    "dev:dashboard": "cd packages/dashboard && npm run dev",
    "publish:lib": "cd packages/lib-ts && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lokwkin/pipelens.git"
  },
  "author": "lokwkin <lokwkin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lokwkin/pipelens/issues"
  },
  "homepage": "https://github.com/lokwkin/pipelens#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@types/pg": "^8.11.13"
  }
}
